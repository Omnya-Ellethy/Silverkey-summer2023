@page
@model ReadRss.Pages.RssFeedModel
@{
    ViewData["Title"] = "RSS Feed Reader";
}

<style>
    /* CSS styles for the RSS Feed page */
    body {
        margin: 0;
        padding-top: 60px; /* Adjust the value to accommodate the navbar height */
        font-family: Arial, sans-serif;
    }
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 60px;
        background: linear-gradient(to bottom, #9966ff 0%, #ccccff 100%);
        display: flex;
        align-items: center;
        justify-content: flex-start; /* Align to the left */
        z-index: 999;
        border-bottom: 1px solid #9999ff;
        box-shadow: 0 .25rem .75rem rgba(0, 0, 0, .05);
    }

    .navbar h2 {
        font-family: fantasy;
        color: white;
        font-size: xx-large;
        text-align: left;
        font-weight: normal;
        margin-left: 20px; /* Add left margin for spacing */
    }
    .navbar h2:after,.navbar h2:before {
    content: " ";
    display: block;
    border-bottom: 2px solid white;
    background-color:white;
    }


    .feed-container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 20px;
        margin-top: 20px;
    }

    .feed-item {
        border: 1px solid #ddd;
        padding: 20px;
        background-color: #f9f9f9;
        flex-direction: column;
        align-items: center;
        text-align: left;
        margin: 10px;
    }

    .feed-title {
        font-size: 18px;
        font-weight: bold;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }


    .feed-description {
        margin-bottom: 10px;
    }

    .feed-link {
        display: inline-block;
        padding: 8px 12px;
        font-size: 16px;
        font-weight: bold;
        text-align: center;
        text-decoration: none;
        background-color: #9999ff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .feed-link:hover {
        background-color: #ccccff;
    }

    p {
        text-align: center;
        margin-top: 20px;
    }
</style>

<div class="navbar">
    <div class="container">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>

@if (Model.ContentCollection != null && Model.ContentCollection.Count > 0)
{
    <div class="feed-container">
        @foreach (var item in Model.ContentCollection)
        {
            <div class="feed-item">
                <div class="feed-title">@item.Title</div>
                <div class="feed-description">@Html.Raw(item.Description)</div>
                <button class="feed-link" onclick="window.location.href = '@item.Link';">View</button>
    
            </div>
        }
    </div>
}
else
{
    <p>No RSS feed data available.</p>
}
